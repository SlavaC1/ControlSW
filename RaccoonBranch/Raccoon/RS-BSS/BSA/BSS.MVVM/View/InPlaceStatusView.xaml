<UserControl x:Class="BSS.MVVM.View.InPlaceStatusView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:BSS.MVVM.View.Converters"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ResourceDictionary Source="Resources.xaml" />
    </UserControl.Resources>

    <DockPanel>
        <Label DockPanel.Dock="Left" Margin="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Border Style="{StaticResource Circle}"
                        Background="{Binding TrafficLightColor, Converter={StaticResource TrafficLightColorToBrushConverter}}"/>
                <Label Style="{StaticResource LargeLabel}"
                       Content="{Binding TrafficLightColor, Converter={StaticResource TrafficLightColorToTextConverter}}" />
            </StackPanel>
        </Label>
        <ProgressBar Margin="2" Value="{Binding Progress}" 
                     Visibility="{Binding Progress, Converter={StaticResource ProgressToVisibilityConverter}}" />
    </DockPanel>
</UserControl>